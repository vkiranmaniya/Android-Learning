<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/actor_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:background="@drawable/photo_shape"
                android:src="@drawable/tom_cruise" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/actor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tom Cruise"
                android:textColor="#000000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/actor_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/11/1994"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actor_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5'10"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actor_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="United States"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actor_wife"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jennifer Aniston"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/actor_child"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shiloh Nouvel Jolie-Pitt, Maddox Chivan Jolie-Pitt"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/actor_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="William Bradley 'Brad' Pitt is an American actor and film producer. He has received a Golden Globe Award, a Screen Actors Guild Award, and three Academy Award nominations in acting categories"
        android:textColor="#000000" />


</LinearLayout>